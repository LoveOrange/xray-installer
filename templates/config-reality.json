{
    // REFERENCE:
    // https://github.com/XTLS/Xray-examples
    // https://xtls.github.io/config/
    // 1_日志设置
    "log": {
        "loglevel": "warning",
        "access": "{{LOG_DIR}}/access.log",
        "error": "{{LOG_DIR}}/error.log"
    },
    // 2_分流设置
    "routing": {
        "domainStrategy": "AsIs",
        "rules": [
            // 防止服务器本地流转问题
            {
                "type": "field",
                "ip": [
                    "geoip:private"
                ],
                "outboundTag": "block"
            },
            // 防止服务器直连国内
            {
                "type": "field",
                "ip": [
                    "geoip:cn"
                ],
                "outboundTag": "block"
            },
            // 屏蔽广告
            {
                "type": "field",
                "domain": [
                    "geosite:category-ads-all"
                ],
                "outboundTag": "block"
            },
            // === AI Sites - Route through residential proxy ===
            // Block UDP for AI sites (force TCP)
            {
                "type": "field",
                "network": "udp",
                "domain": [
                    "geosite:openai",
                    "geosite:anthropic",
                    "domain:anthropic.com",
                    "domain:claude.ai",
                    "domain:openai.com",
                    "domain:chatgpt.com",
                    "domain:chat.openai.com",
                    "domain:ai.com"
                ],
                "outboundTag": "block"
            },
            // TCP: Route AI sites through residential proxy
            {
                "type": "field",
                "network": "tcp",
                "domain": [
                    "geosite:openai",
                    "geosite:anthropic",
                    "domain:anthropic.com",
                    "domain:claude.ai",
                    "domain:openai.com",
                    "domain:chatgpt.com",
                    "domain:chat.openai.com",
                    "domain:ai.com"
                ],
                "outboundTag": "residential_proxy"
            }
        ]
    },
    // 3_入站设置
    "inbounds": [
        {
            "listen": "0.0.0.0",
            "port": 443,
            "protocol": "vless",
            "settings": {
                "clients": [
                    {
                        "id": "{{UUID}}",
                        "flow": "xtls-rprx-vision"
                    }
                ],
                "decryption": "none"
            },
            "streamSettings": {
                "network": "tcp",
                "security": "reality",
                "realitySettings": {
                    "show": false,
                    "dest": "{{REALITY_DEST}}",
                    "xver": 0,
                    "serverNames": {{REALITY_SERVER_NAMES}},
                    "privateKey": "{{PRIVATE_KEY}}",
                    "shortIds": [
                        "{{SHORT_ID}}",
                        ""
                    ]
                }
            },
            "sniffing": {
                "enabled": true,
                "destOverride": [
                    "http",
                    "tls",
                    "quic"
                ]
            }
        }
    ],
    // 4_出站设置
    "outbounds": [
        // 默认直连
        {
            "tag": "direct",
            "protocol": "freedom"
        },
        // 住宅代理 (Residential SOCKS5 Proxy for AI sites)
        {
            "tag": "residential_proxy",
            "protocol": "socks",
            "settings": {
                "servers": [
                    {
                        "address": "{{SECONDARY_IP}}",
                        "port": {{SECONDARY_PORT}},
                        "users": [
                            {
                                "user": "{{SECONDARY_USER}}",
                                "pass": "{{SECONDARY_PASS}}"
                            }
                        ]
                    }
                ]
            }
        },
        // 黑洞屏蔽
        {
            "tag": "block",
            "protocol": "blackhole"
        }
    ]
}